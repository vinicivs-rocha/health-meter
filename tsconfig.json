{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "lib": ["es6"],
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    // Path aliases
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@/*": ["src/*"],
      "@assets/*": ["assets/*"],
    }
  },
  
}
